@model TechXpress.Web.ViewModels.ResetPasswordConfirmationViewModel
@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "_AuthLayout";
}
<div class="auth-message-container">
    <div class="auth-icon-circle bg-success-light">
        <i class="fas fa-check-circle text-success"></i>
    </div>

    <h2 class="auth-title">Password Updated</h2>

    <div class="auth-message">
        <p>Your password has been successfully reset for <strong>@Model.Email</strong>.</p>
        <p>You can now sign in with your new password.</p>
    </div>

    <div class="auth-footer">
        <a asp-action="Login" class="btn-auth">
            <i class="fas fa-sign-in-alt"></i>
            <span>Sign In Now</span>
        </a>
    </div>
</div>