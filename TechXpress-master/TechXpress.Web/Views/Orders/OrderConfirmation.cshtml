@model TechXpress.Data.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container text-center py-5">
    <div class="confirmation-icon mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
    </div>
    <h2 class="mb-3">Thank You for Your Order!</h2>
    <p class="lead mb-4">Your order has been placed successfully with order number <strong>#@Model.Id</strong></p>

    <div class="card mx-auto mb-4" style="max-width: 500px;">
        <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <div class="d-flex justify-content-between mb-2">
                <span>Date:</span>
                <span>@Model.OrderDate.ToString("g")</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span>Status:</span>
                <span class="badge bg-success">@Model.OrderStatus</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span>Total:</span>
                <span>@Model.TotalAmount.ToString("C")</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a href="@Url.Action("Details", "Order", new { id = Model.Id })" class="btn btn-primary">
            View Order Details
        </a>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary">
            Continue Shopping
        </a>
    </div>

    <div class="mt-5">
        <h5>What's Next?</h5>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-envelope-fill fs-3 text-primary mb-3"></i>
                        <h6>Order Confirmation</h6>
                        <p class="small text-muted">You'll receive an email confirmation shortly.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-truck fs-3 text-primary mb-3"></i>
                        <h6>Shipping Updates</h6>
                        <p class="small text-muted">We'll notify you when your order ships.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="bi bi-headset fs-3 text-primary mb-3"></i>
                        <h6>Need Help?</h6>
                        <p class="small text-muted">Contact our support team for any questions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>