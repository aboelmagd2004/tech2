@{
    ViewData["Title"] = "Your Cart is Empty";
}

<div class="container text-center py-5">
    <div class="empty-cart-icon">
        <i class="bi bi-cart-x" style="font-size: 5rem; color: #6c757d;"></i>
    </div>
    <h2 class="mt-4">Your Cart is Empty</h2>
    <p class="lead">Looks like you haven't added any items to your cart yet.</p>
    <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg mt-3">
        <i class="bi bi-arrow-left"></i> Continue Shopping
    </a>
</div>