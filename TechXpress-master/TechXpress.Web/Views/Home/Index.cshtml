@{
    ViewData["Title"] = "Home Page";
}

<!-- Google Fonts -->
<link href="https://fonts.apple.com/stylesheet/sf-pro" rel="stylesheet">


<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Orbitron', sans-serif;
    }

    .dark-card {
        background-color: #1f1f1f;
        border-radius: 10px;
        padding: 20px;
        margin: 15px 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

        .dark-card img {
            width: 100%;
            height: 200px;
            object-fit: contain;
            background-color: #2a2a2a;
            border-radius: 10px;
            margin-bottom: 15px;
        }

    h2.section-title {
        border-bottom: 2px solid #00c3ff;
        padding-bottom: 5px;
        margin-top: 40px;
        color: #00c3ff;
    }

    a.btn {
        background-color: #00c3ff;
        color: #000;
        font-weight: bold;
        transition: 0.3s;
    }

        a.btn:hover {
            background-color: #008bb5;
            color: #fff;
        }
</style>

<div class="container">
    <h2 class="section-title">Top Brands</h2>
    <div class="row">
        @if (ViewBag.TopBrands != null)
        {
            foreach (var brand in ViewBag.TopBrands)
            {
                if (brand != null)
                {
                    <div class="col-md-3 dark-card text-center">
                        <img src="~/Images/Brands/@brand.Image" alt="@brand.Name" />
                        <h4>@brand.Name</h4>
                        <a class="btn btn-sm mt-2" href="/Products/ByBrand/@brand.Id">View Products</a>
                    </div>
                }
            }
        }
    </div>

    <h2 class="section-title">Top Categories</h2>
    <div class="row">
        @if (ViewBag.TopCategories != null)
        {
            foreach (var category in ViewBag.TopCategories)
            {
                if (category != null)
                {
                    <div class="col-md-3 dark-card text-center">
                        <img src="~/Images/Categories/@category.Image" alt="@category.Name" />
                        <h4>@category.Name</h4>
                        <a class="btn btn-sm mt-2" href="/Products/ByCategory/@category.Id">Shop Now</a>
                    </div>
                }
            }
        }
    </div>

    <h2 class="section-title">Featured Products</h2>
    <div class="row">
        @if (ViewBag.TopProducts != null)
        {
            foreach (var product in ViewBag.TopProducts)
            {
                if (product != null)
                {
                    <div class="col-md-3 dark-card text-center">
                        <img src="~/Images/Products/@product.Image" alt="@product.Name" />
                        <h4>@product.Name</h4>
                        <p>@product.Price EGP</p>
                        <a class="btn btn-sm mt-2" href="/Product/Details/@product.Id">Details</a>
                    </div>
                }
            }
        }
    </div>
</div>
