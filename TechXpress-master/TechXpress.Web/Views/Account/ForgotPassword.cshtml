@model TechXpress.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="auth-form-container">
    <form asp-action="ForgotPassword" method="post" class="auth-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <div class="input-with-icon">
                <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                <i class="fas fa-envelope input-icon"></i>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-auth">
            <i class="fas fa-key"></i>
            <span>Reset Password</span>
        </button>

        <div class="auth-footer">
            Remember your password? <a asp-action="Login">Sign in</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}