@model TechXpress.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechXpress</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Toastr -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary: #4e73df;
            --primary-dark: #2e59d9;
            --secondary: #858796;
            --light: #f8f9fc;
            --dark: #5a5c69;
            --success: #1cc88a;
            --danger: #e74a3b;
            --warning: #f6c23e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fc;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('https://images.unsplash.com/photo-1518770660439-4636190af475?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6);
                z-index: 0;
            }

        .auth-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 450px;
            padding: 0 20px;
        }

        .auth-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            padding: 20px;
            animation: fadeInUp 0.6s ease;
        }

        .auth-header {
            text-align: center;
            /* margin-bottom: 30px; */
        }

        .auth-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .auth-logo-icon {
            width: 50px;
            height: 50px;
            background: var(--primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            box-shadow: 0 5px 15px rgba(78, 115, 223, 0.4);
        }

            .auth-logo-icon i {
                color: white;
                font-size: 24px;
            }

        .auth-logo-text {
            font-size: 24px;
            font-weight: 700;
            color: var(--dark);
            letter-spacing: 0.5px;
        }

        .auth-title {
            font-size: 18px;
            color: var(--secondary);
            margin-bottom: 5px;
        }

        .auth-subtitle {
            font-size: 14px;
            color: var(--secondary);
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            font-weight: 500;
            color: var(--dark);
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #d1d3e2;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
            background-color: var(--light);
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
                outline: none;
                background-color: white;
            }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 38px;
            color: var(--secondary);
            cursor: pointer;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            background: var(--primary);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(78, 115, 223, 0.4);
        }

            .btn-register:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 7px 20px rgba(78, 115, 223, 0.5);
            }

            .btn-register:active {
                transform: translateY(0);
            }

        .auth-footer {
            text-align: center;
            margin-top: 20px;
        }

            .auth-footer a {
                color: var(--primary);
                text-decoration: none;
                font-size: 14px;
                font-weight: 500;
                transition: all 0.2s;
            }

                .auth-footer a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: var(--danger);
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        .validation-summary-errors {
            color: var(--danger);
            background: rgba(231, 74, 59, 0.1);
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            border-left: 3px solid var(--danger);
        }

            .validation-summary-errors ul {
                margin-bottom: 0;
                padding-left: 20px;
            }

        .name-fields {
            display: flex;
            gap: 15px;
        }

            .name-fields .form-group {
                flex: 1;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 576px) {
            .auth-card {
                padding: 30px 20px;
            }

            .auth-logo {
                flex-direction: column;
                text-align: center;
            }

            .auth-logo-icon {
                margin-right: 0;
                margin-bottom: 10px;
            }

            .name-fields {
                flex-direction: column;
                gap: 0;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <div class="auth-logo-icon">
                        <i class="fas fa-laptop-code"></i>
                    </div>
                    <div class="auth-logo-text">TechXpress</div>
                </div>
                @* <h2 class="auth-title">Create Your Account</h2> *@
                @* <p class="auth-subtitle">Join TechXpress today</p> *@
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="name-fields">
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                    <i class="fas fa-eye-slash input-icon" id="togglePassword"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    <i class="fas fa-eye-slash input-icon" id="toggleConfirmPassword"></i>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-register">
                    <span class="btn-text">Register</span>
                </button>

                <div class="auth-footer">
                    Already have an account? <a asp-action="Login">Sign in</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function() {
            // Password visibility toggle
            $('#togglePassword, #toggleConfirmPassword').click(function() {
                const inputId = $(this).attr('id') === 'togglePassword' ? 'Password' : 'ConfirmPassword';
                const passwordInput = $('#' + inputId);
                const icon = $(this);

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                }
            });

            // Form submission animation
            $('form').submit(function() {
                $('.btn-register').prop('disabled', true);
                $('.btn-text').text('Creating Account...');
                $('.btn-register').append('<span class="spinner-border spinner-border-sm ml-2" role="status" aria-hidden="true"></span>');
            });
        });

        // Display any tempdata messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]', 'Success', {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-center",
                    timeOut: 5000
                });
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                toastr.error('@TempData["ErrorMessage"]', 'Error', {
                    closeButton: true,
                    progressBar: true,
                    positionClass: "toast-top-center",
                    timeOut: 5000
                });
            </text>
        }
    </script>
</body>
</html>